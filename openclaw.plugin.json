{
  "id": "openclaw-help",
  "name": "OpenClaw Help",
  "version": "0.1.3",
  "description": "Enhanced /help command listing local shortcuts and commands.",
  "configSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": { "type": "boolean", "default": true },
      "includeTips": { "type": "boolean", "default": true },
      "sections": {
        "type": "array",
        "description": "Custom help sections (configure locally; keep repo placeholder-only).",
        "items": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "title": { "type": "string" },
            "lines": { "type": "array", "items": { "type": "string" } }
          },
          "required": ["title", "lines"]
        },
        "default": []
      }
    }
  }
}
